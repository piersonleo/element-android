<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:background="@color/palette_gray_25"
     android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/walletTransferToolbar"
        style="@style/Widget.Vector.Toolbar.Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/transferImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:navigationIcon="@drawable/ic_back_24dp" />

    <ImageView
        android:id="@+id/transferImageView"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="68dp"
        android:adjustViewBounds="false"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/ic_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walletTransferToolbar" />

    <Space
        android:id="@+id/entrySpacing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@id/transferImageView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transferAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/entrySpacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:boxBackgroundColor="@color/palette_white"
        app:errorEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transferAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vchat_wallet_recipient_address"
            android:enabled="false"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transferAmountLayout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/transferAddressLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:boxBackgroundColor="@color/palette_white"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transferAmountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vchat_wallet_transfer_input_amount"
            android:inputType="numberDecimal"
            android:digits="0123456789.,"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unitDropdown"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        app:layout_constraintEnd_toEndOf="@id/transferAddressLayout"
        app:layout_constraintTop_toBottomOf="@id/transferAddressLayout"
        app:layout_constraintStart_toEndOf="@id/transferAmountLayout"
        app:boxBackgroundColor="@color/palette_white"
        android:hint="Unit">

        <AutoCompleteTextView
            android:id="@+id/unitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/transferReference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/transferAmountLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:boxBackgroundColor="@color/palette_white"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/transferReferenceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vchat_wallet_reference_title" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnTransfer"
        style="@style/Widget.Vector.Button.Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/vchat_wallet_transfer"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

